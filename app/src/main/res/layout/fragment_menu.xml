<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".menu.view.MenuFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/fundo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardImagemDoDia"
                android:background="@drawable/apod_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/colorPrimaryDarkMenu">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:src="@drawable/apod_1"
                    android:scaleType="fitXY"
                    android:id="@+id/imgImagemDoDia"
                    android:layout_gravity="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@color/colorBase"
                    android:alpha="0.31"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_gravity="bottom"
                    android:background="@color/colorPrimaryDarkestMenu"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IMAGEM DO DIA"
                        android:textSize="10dp"
                        android:textColor="@color/colorWhite"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="North of Orion's Belt"
                        android:textSize="20dp"
                        android:textColor="@color/colorWhite"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_weight="30"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardImagensEVideos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/colorPrimaryDarkMenu">

                <ImageView
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:src="@drawable/ic_observatory" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:text="@string/imagens_e_videos"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:textColor="@color/colorWhite" />

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/colorPrimaryDarkMenu">

                    <ImageView
                        android:layout_marginStart="25dp"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_alien"/>

                    <ImageView
                        android:layout_marginStart="3dp"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_astronaut"/>

                    <TextView
                        android:layout_marginStart="75dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/perfil"
                        android:textSize="12dp"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"/>

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardMarsRover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="3dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/colorPrimaryDarkMenu">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:src="@drawable/ic_mars_rover"
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center|top"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mars_rover"
                            android:layout_gravity="center|bottom"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:textColor="@color/colorWhite" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardTempoEmMarte"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/colorPrimaryDarkMenu">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:src="@drawable/ic_mars"
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center|top"/>
                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:src="@drawable/ic_thermometer"
                            android:layout_gravity="top|center"
                            android:layout_marginStart="25dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tempo_em_marte"
                            android:gravity="center"
                            android:layout_gravity="center|bottom"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            android:textSize="12dp"/>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_weight="24"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardEventosNaturais"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="3dp"
                app:cardBackgroundColor="@color/colorPrimaryDarkMenu">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/ic_storm"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="3dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eventos_naturais"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:layout_gravity="center|bottom"
                    android:textColor="@color/colorWhite" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardObjetosEmColisao"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/colorPrimaryDarkMenu">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/ic_asteroid"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="top|center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/objetos_em_rota_de_colisao"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="center|bottom"
                    android:textSize="12dp"
                    android:textStyle="bold"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_weight="24"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPlanetasOrbitando"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="3dp"
                android:layout_weight="6"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/colorPrimaryDarkMenu">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/ic_astronomy"
                    android:layout_gravity="top|center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/planetas_orbitando_estrelas"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center|bottom"
                    android:textSize="12dp"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNovasTecnologias"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/colorPrimaryDarkMenu">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/ic_satellite"
                    android:layout_gravity="top|center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/novas_tecnologias"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:layout_gravity="center|bottom"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>