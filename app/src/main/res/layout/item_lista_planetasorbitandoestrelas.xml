<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/colorPrimaryDark">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ImageView
            android:id="@+id/imgPlanetaOrbitandoEstrela"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:contentDescription="@string/imagem_planeta_orbitando_estrela"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <TextView
            android:id="@+id/txtNomePlaneta"
            android:layout_height="wrap_content"
            android:text="@string/nome_planeta"
            android:padding="5dp"
            android:textSize="@dimen/dimen_text_30"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgPlanetaOrbitandoEstrela"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorWhite"
            android:layout_width="0dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/txtNomeEstrela"
            android:layout_height="wrap_content"
            android:text="Nome Estrela"
            android:padding="5dp"
            android:textSize="@dimen/dimen_text_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtNomePlaneta"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorWhite"
            android:layout_width="0dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>