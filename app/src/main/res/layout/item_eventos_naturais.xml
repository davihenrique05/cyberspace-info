<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    android:background="@color/colorPrimaryDarkMenu">

    <ImageView
        android:id="@+id/imgCoordinates"
        android:layout_width="98dp"
        android:layout_height="115dp"
        android:layout_marginStart="12dp"
        android:adjustViewBounds="true"
        android:layout_marginBottom="4dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_google_maps" />

    <TextView
        android:id="@+id/txtTitleEvent"
        android:layout_width="184dp"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        android:gravity="start"
        tools:text="TextView"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imgCoordinates"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCategoryEvent"
        android:layout_width="184dp"
        android:layout_height="31dp"
        android:layout_marginStart="20dp"
        android:gravity="start"
        tools:text="TextView"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toEndOf="@+id/imgCoordinates"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleEvent" />

    <TextView
        android:id="@+id/txtDateEvent"
        android:layout_width="190dp"
        android:layout_height="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="@dimen/dimen_20"
        android:gravity="start"
        tools:text="TextView"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toEndOf="@+id/imgCoordinates"
        app:layout_constraintTop_toBottomOf="@+id/txtCategoryEvent" />
</androidx.constraintlayout.widget.ConstraintLayout>