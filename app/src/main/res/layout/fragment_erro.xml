<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mensagemdeerro.ErroFragment"
    android:background="@drawable/fundo_test">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarError"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDarkest">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageIconReturnErro"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="@dimen/dimen_35"
                android:layout_height="@dimen/dimen_35"
                android:backgroundTint="@color/colorPrimaryDarkest"
                android:src="@drawable/ic_baseline_arrow_back_24" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_50"
        android:layout_marginEnd="@dimen/dimen_50"
        android:layout_marginTop="@dimen/dimen_8"
        app:cardBackgroundColor="@color/colorPrimaryDarkMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageError">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Você não vai acreditar... tinha um buraco negro... duas supernovas... e uma civilização alienígina... enfim, não sabemos onde foi para a pagina que tava aqui mas nosso time está a todo vapor para solucionar o problema!"
            android:textColor="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/dimen_8"/>
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/imageError"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_250"
        android:layout_margin="@dimen/dimen_24"
        android:scaleType="fitXY"
        android:src="@drawable/space_cats"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarError"
        app:layout_constraintVertical_bias="0.143" />



</androidx.constraintlayout.widget.ConstraintLayout>
